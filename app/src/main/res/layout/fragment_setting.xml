<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/btn_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_account_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_normal"
                app:srcCompat="@drawable/ic_account_setting" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BoldNormalTextStyleBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_view_account"
                android:layout_toEndOf="@id/iv_account_setting"
                android:text="@string/account" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_view_account"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_next" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_color" />

        <RelativeLayout
            android:id="@+id/btn_sub_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_sub_account_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_normal"
                app:srcCompat="@drawable/ic_create_sub_account" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BoldNormalTextStyleBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_view_sub_account"
                android:layout_toEndOf="@id/iv_sub_account_setting"
                android:text="@string/create_sub_account" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_view_sub_account"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_next" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_color" />

        <RelativeLayout
            android:id="@+id/btn_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_lock_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_normal"
                app:srcCompat="@drawable/ic_setting_lock" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BoldNormalTextStyleBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_view_lock_setting"
                android:layout_toEndOf="@id/iv_lock_setting"
                android:text="@string/lock" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_view_lock_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_next" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_color" />

        <RelativeLayout
            android:id="@+id/btn_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_logout_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_normal"
                app:srcCompat="@drawable/ic_logout" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BoldNormalTextStyleBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_view_logout_setting"
                android:layout_toEndOf="@id/iv_logout_setting"
                android:text="@string/logout" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_view_logout_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_next" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_color" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
