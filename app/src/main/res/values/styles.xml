<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="corner_radius">
        <item name="cornerSize">30%</item>
    </style>

    <style name="round_radius">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ScreenTitleTextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPropertyTitle">
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="PropertyEdittext">
        <item name="android:background">@drawable/bg_login_edittext</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#B3FFFFFF</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldNormalTextStyle" parent="NormalTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalTextStyleBlack">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="BoldNormalTextStyleBlack" parent="NormalTextStyleBlack">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="BigTextStyleBlack">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>